<script>
  $(document).ready(function() {
  });
</script>

<h2><%= category %> Transactions</h2>

<% if(tx.length == 0) {%>

  <h4>No transactions yet.</h4>

<% } else { %>

  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th><%= category == 'Received' ? 'Your Receiving' : 'Recipient' %> Address</th>
        <th>Amount</th>
        <th>Confirmations</th>
        <th>Date</th>
        <th></th>
    </thead>
    <tbody>
      <% for(var i=0; i<tx.length; i++) { %>
        <tr>
          <td>
            <%= coinpunk.wallet.getAddressName(tx[i].address) %>
            <span class="pull-right"><%= tx[i].address %></span>
          </td>
          <td><span class="addExchangePrice"><%= tx[i].amount %> BTC</span></td>
          <td>
            <%= tx[i].confirmations %>

            <% if(tx[i].confirmations < coinpunk.controllers.dashboard.minimumSendConfirmations) { %>
              <span class="label label-info pull-right">Pending</span>
            <% } else { %>
              <span class="label label-success pull-right">Confirmed</span>
            <% } %>
          </td>
          <td>
            <%= humaneDate(new Date(tx[i].timereceived * 1000).toISOString()) %>
            <span class="pull-right">
              <%= coinpunk.controllers.dashboard.friendlyTimeString(tx[i].timereceived) %>
            </span>
          </td>
          <td><a href="#/tx/details/<%= tx[i].txid %>">Details</a></td>
      <% } %>
    </tbody>
  </table>

<% } %>